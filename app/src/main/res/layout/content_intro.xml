<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".IntroActivity"
    tools:showIn="@layout/activity_intro"
    android:orientation="vertical"
    android:background="@color/colorAppBackground">

    <TextView
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorAppText"/>

    <TextView
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_question"
        android:textColor="@color/colorAppText"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/simple_puzzle_answer"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_question_hint"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        android:layout_marginBottom="55dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escape!"
        android:textColor="@color/colorAppText"
        android:background="@drawable/btn_rounded"
        android:layout_gravity="center"
        android:onClick="start"
        android:layout_marginBottom="25dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:src="@drawable/namedog"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />



</LinearLayout>