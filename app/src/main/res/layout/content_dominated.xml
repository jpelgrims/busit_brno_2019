<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DominatedActivity"
    tools:showIn="@layout/activity_dominated">


    <android.support.v7.widget.AppCompatImageView
        style="@style/style_image"
        android:layout_width="182dp"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:src="@drawable/dominateddog" />

    <TextView
        style="@style/style_story_text"
        android:text="@string/dominated_title" />

    <Button
        style="@style/style_btn_continue"
        android:onClick="finishedScan" />

</LinearLayout>